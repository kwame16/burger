<div class="container">
  <div class="row header">

    <div class="col-md-3"><img src="#" alt="">
    </div>

    <div class="col-md-6">
      <h1>Bar Hamburglar!</h1>
    </div>

    <div class="col-md-3"><img src="#" alt="">
    </div>

  </div>

  <div class="adding">
    <div class="col-md-12">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Add Burger
        </div>

        <button type="submit">Add burger</button>
      </form>
    </div>

  </div>

  <div class="rows">

    <div class="col-md-6 burgers">
      <h2>Burgers</h2>

      <ul id="fresh">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 noburgers">
      <h2 id="eaten">Burgers that are devoured!</h2>

      <ul id="eaten">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>